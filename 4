#include <stdio.h>

int main() {
    int count, i;
    printf("How many numbers to be inputted? ");
    scanf("%d", &count);
    int num[count];
    int min = 9999999;
    int max = -9999999;
    
    printf("Type the numbers: \n");
    for (i = 0; i < count; i++) {
        scanf("%d", &num[i]);
    }
    
    for (i = 0; i < count; i++) {
        if (num[i] < min) {
            min = num[i];
        }
        if (num[i] > max) {
            max = num[i];
        }
    }
    
    printf("Largest number is: %d \n", max);
    printf("Smallest number is: %d", min);
    
    return 0;
}
